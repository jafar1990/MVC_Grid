@model MVC_Grid.Models.Customer

@using (Html.BeginForm("Update", "Home", FormMethod.Post))
{
    <table border="1" cellpadding="10">
        <tr>
            <td>Customer ID :</td>
            <td>
                @Html.TextBoxFor(m => m.CustomerID,new { @readonly = "readonly" })
        </td>
    </tr>
    <tr>
        <td>Company Name :</td>
        <td>@Html.TextBoxFor(m => m.CompanyName)</td>
    </tr>
    <tr>
        <td>Contact Name :</td>
        <td>@Html.TextBoxFor(m => m.ContactName)</td>
    </tr>
    <tr>
        <td>Country :</td>
        <td>@Html.TextBoxFor(m => m.Country)</td>
    </tr>
    <tr>
        <td colspan="2">
            <input type="submit" value="Save"formaction="/Customer/update" />
            <input type="submit" value="Cancel"formaction="/Customer/cancel/@Model.CustomerID" />
        </td>
    </tr>
</table>
}
